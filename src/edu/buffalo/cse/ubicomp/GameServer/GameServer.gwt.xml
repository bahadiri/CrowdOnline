<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='gameserver'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->

  <!-- Specify the app entry point class.                         -->
  <entry-point class='edu.buffalo.cse.ubicomp.GameServer.client.GameServer'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>
  
  <servlet path="/DemoServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.DemoServlet"/>
  <servlet path="/AnswerServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.AnswerServlet"/>
  <servlet path="/RegisterServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.RegisterServlet"/> 
  <servlet path="/UnregisterServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.UnregisterServlet"/>
  <servlet path="/SendAllMessagesServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.SendAllMessagesServlet"/>
  <servlet path="/HomeServlet" class="edu.buffalo.cse.ubicomp.GameServer.server.HomeServlet"/> 

</module>
