<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <!-- 
  <listener>
    <listener-class>
      edu.buffalo.cse.ubicomp.GameServer.server.ApiKeyInitializer
    </listener-class>
  </listener>
   -->
   <servlet>
    <servlet-name>AnswerServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.AnswerServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>AnswerServlet</servlet-name>
    <url-pattern>/gameserver/answer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.RegisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/gameserver/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UnregisterServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.UnregisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>UnregisterServlet</servlet-name>
    <url-pattern>/gameserver/unregister</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.SendAllMessagesServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <url-pattern>/gameserver/sendAll</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.HomeServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/gameserver/home</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>edu.buffalo.cse.ubicomp.GameServer.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/gameserver/greet</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>DemoServlet</servlet-name>
    <servlet-class>
      edu.buffalo.cse.ubicomp.GameServer.server.DemoServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>DemoServlet</servlet-name>
    <url-pattern>/gameserver/DemoServlet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GameServer.html</welcome-file>
  </welcome-file-list>

</web-app>
